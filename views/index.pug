html
  head
    title=title
    link( rel="stylesheet", href="css/style.css", type="text/css")
  body
    div(class="headerContainer")
      h1=title
    div(class="mainPart")
      div(class="mainContainer")
        p=message
          if show_form
            form(action="/", method="post")
              select(name="test_selector")
                each id_name in test_list 
                  option(value=id_name["uuid"])=id_name["name"]
              button(type="submit", name="submit")="select"
          else
            span !{" [<span class=\"red_text\">" + message_id + "</span> ]"}
            p
            a(href="/")="Go back"
